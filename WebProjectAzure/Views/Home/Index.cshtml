@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center container">
    <h1 class="display-4 my-4">Welcome to Sup de Vinci Gaming</h1>

    <div id="carouselExampleCaptions" class="carousel slide mx-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Elden Ring"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Borderlands"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="7 Days to die"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Dofus Retro"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Minecraft Dungeons"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="5" aria-label="Rocket League"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/EldenRing.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Borderlands.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/7DaysToDie.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Dofus.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/MinecraftDungeons.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/RocketLeague.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
